<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test_07.Spinner_Activity">

    <Spinner
        android:id="@+id/sp_sheng"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/sp_shi"
        android:layout_toLeftOf="@+id/sp_shi"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/sp_shi"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/tv_show_sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/tv_show_sp"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        />
</RelativeLayout>